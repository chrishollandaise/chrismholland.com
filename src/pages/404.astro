---
import BaseLayout from '../layouts/BaseLayout.astro'
import { say } from 'cowsay'
import quotes from '../assets/cowsay.json'
---

<BaseLayout>
  <figure>
    <pre
      class='noselect'
      aria-hidden='true'>{say({ text: quotes[Math.floor(Math.random() * quotes.length)].quote, f: "stegosaurus", d: true})}
    </pre>
    <figcaption class='text-center'>404. Page Not Found.</figcaption>
  </figure>
</BaseLayout>
