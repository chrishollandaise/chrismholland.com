---
import { Icon } from 'astro-icon/components'

const { type: keyword = 'custom' } = Astro.props
const { title } = Astro.props

const TYPES = new Map(
  Object.entries({
    important: ['admonition-important', 'mdi:exclamation-thick'],
    warning: ['admonition-warning', 'mdi:fire'],
    note: ['admonition-note ', 'mdi:information'],
    tip: ['admonition-tip', 'mdi:lightbulb'],
    caution: ['admonition-caution', 'mdi:warning-box']
  })
)

//@ts-ignore
const [css, icon] = keyword ? TYPES.get(keyword) : ['', '']
---

<div class=`twp mb-2 border-l-8 p-4 ${css ? css : "admonition-custom"}`>
  <div class='twp flex items-center gap-1'>
    <Icon
      class='admonition-icon'
      class=`align-middle text-2xl`
      name={icon ? icon : 'mdi:library'}
    />
    <p class='admonition-title' class=`text-2xl uppercase font-bold`>
      {title}
    </p>
  </div>
  <div class='mt-5 text-white'>
    <slot />
  </div>
</div>
