---
interface Props {
  title?: string
  articleDate?: string
  description?: string
  ogImage?: string
}
const { title, articleDate, description, ogImage } = Astro.props
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import Head from '../components/Head.astro'
import EasterEgg from '../components/EasterEgg.astro'
---

<html lang='en'>
  <Head
    title={title}
    articleDate={articleDate}
    description={description}
    ogImage={ogImage}
  />
  <!-- skip link -->
  <a class='sr-only' href='#main'>Skip to main content</a>
  <!-- making sure scroll bar doesn't cause layout shift -->
  <body class='[scrollbar-gutter:stable]'>
    <Header />
    <main id='main'>
      <slot />
    </main>
    <Footer />
  </body>
  <EasterEgg />
</html>
