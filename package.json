    "@astrojs/node": "^8.2.5",
    "@astrojs/partytown": "^2.0.4",
    "@astrojs/rss": "^4.0.5",
    "@astrojs/sitemap": "^3.1.1",
    "@astrojs/tailwind": "^5.1.0",
    "@iconify-json/mdi": "^1.1.64",
    "astro": "^4.5.1",
    "astro-compress": "^2.2.17",
    "astro-critters": "^2.1.6",
    "astro-expressive-code": "^0.33.5",
    "astro-icon": "^1.1.0",
    "nodemailer": "^6.9.12",
    "sharp": "^0.33.2",
    "tailwindcss": "^3.4.1",
    "tailwindcss-scoped-preflight": "^2.1.0"
